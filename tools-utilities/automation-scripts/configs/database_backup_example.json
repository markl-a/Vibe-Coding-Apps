{
  "mysql_example": {
    "type": "mysql",
    "host": "localhost",
    "port": 3306,
    "user": "root",
    "password": "your_password",
    "database": "myapp_db",
    "backup_dir": "/backups/mysql",
    "compress": true,
    "keep_backups": 7
  },
  "postgresql_example": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "your_password",
    "database": "myapp_db",
    "backup_dir": "/backups/postgresql",
    "compress": true,
    "keep_backups": 7
  },
  "mongodb_example": {
    "type": "mongodb",
    "host": "localhost",
    "port": 27017,
    "user": "admin",
    "password": "your_password",
    "database": "myapp_db",
    "backup_dir": "/backups/mongodb",
    "compress": true,
    "keep_backups": 7
  },
  "sqlite_example": {
    "type": "sqlite",
    "file": "/path/to/database.db",
    "backup_dir": "/backups/sqlite",
    "compress": true,
    "keep_backups": 7
  }
}
