{
  "manifest_version": 3,
  "name": "Quick Notes - Fast Note Taking",
  "version": "1.0.0",
  "description": "Take quick notes instantly. Supports markdown, auto-save, and sync across devices.",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+N"
      }
    }
  }
}
