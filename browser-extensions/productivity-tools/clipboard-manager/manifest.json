{
  "manifest_version": 3,
  "name": "Clipboard Manager Pro",
  "version": "1.0.0",
  "description": "Advanced clipboard manager - save, organize, and access your clipboard history",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipboard Manager Pro"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "options_page": "options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Open clipboard manager"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
