{
  "manifest_version": 3,
  "name": "Pomodoro Timer - Focus & Productivity",
  "version": "1.0.0",
  "description": "Stay focused and productive with the Pomodoro Technique. Track work sessions, breaks, and improve your workflow.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
