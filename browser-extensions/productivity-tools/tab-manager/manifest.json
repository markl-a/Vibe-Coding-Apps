{
  "manifest_version": 3,
  "name": "Tab Manager - Smart Tab Organization",
  "version": "1.0.0",
  "description": "Organize, search, and manage your browser tabs efficiently. Save tab groups, suspend unused tabs, and boost productivity.",
  "permissions": [
    "tabs",
    "storage",
    "tabGroups",
    "bookmarks"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      }
    },
    "search-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Search tabs"
    }
  }
}
