{
  "manifest_version": 3,
  "name": "Cookie Cleaner Pro",
  "version": "1.0.0",
  "description": "Smart cookie manager and cleaner - protect your privacy by managing cookies efficiently",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Cleaner Pro"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
