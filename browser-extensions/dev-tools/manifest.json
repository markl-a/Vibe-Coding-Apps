{
  "manifest_version": 3,
  "name": "Dev Tools - AI Developer Assistant",
  "version": "1.0.0",
  "description": "All-in-one developer tools: API tester, JSON formatter, color picker, regex tester, and more",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "devtools_page": "devtools.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
