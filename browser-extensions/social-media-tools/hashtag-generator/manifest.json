{
  "manifest_version": 3,
  "name": "Hashtag Generator Pro",
  "version": "1.0.0",
  "description": "AI-powered hashtag generator for social media - boost your reach with trending hashtags",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Hashtag Generator Pro"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
