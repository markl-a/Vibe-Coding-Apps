{
  "name": "animation-generator",
  "version": "1.0.0",
  "description": "专业的动画生成器 - 支持多种动画类型和导出格式",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "animation",
    "generator",
    "electron",
    "canvas",
    "particles",
    "gif",
    "video"
  ],
  "author": "Vibe Coding Apps",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.vibe.animation-generator",
    "productName": "Animation Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  }
}
