{
  "name": "video-player",
  "version": "1.0.0",
  "description": "AI-Native 視頻播放器 - 現代化的跨平台視頻播放器",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "video-player",
    "electron",
    "media-player",
    "ai-native"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "subtitle": "^4.2.1"
  },
  "build": {
    "appId": "com.ainative.videoplayer",
    "productName": "AI Video Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Video"
    }
  }
}
