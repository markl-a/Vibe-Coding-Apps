{
  "name": "create-vibe-app",
  "version": "1.0.0",
  "description": "CLI tool to create new Vibe apps with best practices built-in",
  "type": "module",
  "bin": {
    "create-vibe-app": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --shims",
    "dev": "tsup src/index.ts --format esm --dts --watch --shims",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "generator",
    "vibe",
    "create-app"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
