{
  "name": "@vibe/ai-assistant",
  "version": "1.0.0",
  "description": "Unified AI Development Assistant Platform for Vibe-Coding-Apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "vibe-ai": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "assistant",
    "code-analysis",
    "development",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vibe/shared-utils": "workspace:*",
    "commander": "^11.1.0",
    "ora": "^7.0.1",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
