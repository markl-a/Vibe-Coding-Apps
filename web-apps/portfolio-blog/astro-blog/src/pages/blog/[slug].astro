---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="container mx-auto px-4 py-20">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          {post.data.title}
        </h1>
        <div class="flex items-center gap-4 text-gray-600 dark:text-gray-400 mb-6">
          <time>
            {post.data.pubDate.toLocaleDateString('zh-TW', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span>·</span>
          <span>{post.data.author || '作者'}</span>
        </div>
        <div class="flex flex-wrap gap-2 mb-8">
          {post.data.tags.map((tag: string) => (
            <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 text-sm rounded-full">
              {tag}
            </span>
          ))}
        </div>
      </header>

      <!-- Content -->
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
        <a
          href="/blog"
          class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-500 font-medium"
        >
          ← 返回部落格列表
        </a>
      </footer>
    </div>
  </article>
</Layout>
