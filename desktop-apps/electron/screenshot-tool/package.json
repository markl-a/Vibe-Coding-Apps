{
  "name": "screenshot-tool",
  "version": "1.0.0",
  "description": "強大的螢幕截圖工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "screenshot",
    "screen-capture",
    "electron",
    "productivity",
    "image-editor"
  ],
  "author": "Vibe Coding Apps",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.1.0",
    "fabric": "^5.3.0"
  },
  "build": {
    "appId": "com.vibecoding.screenshot-tool",
    "productName": "Screenshot Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "editor.html",
      "styles.css",
      "editor.css",
      "renderer.js",
      "editor.js",
      "assets/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
