    "logs": "serverless logs -f",
    "remove": "serverless remove",
    "test": "jest"
  },
  "keywords": [
    "serverless",
    "image-processing",
    "lambda",
    "aws"
  ],
  "dependencies": {
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "jest": "^29.7.0"
  }
}
